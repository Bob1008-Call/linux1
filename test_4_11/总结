class Solution {
  public:
    int longestPalindrome(string s) {
              int count[256] = {0};
                      for(int i = 0;i<s.size();++i)
                      {
                                    count[s[i]]++;
                                            
                      }
                              int max = 0;
                                      char temp = '1';
                                              for(int i = 0;i<256;++i)
                                              {
                                                            if(count[i]>max)
                                                            {
                                                                              max = count[i];
                                                                                              temp = i;
                                                                                                          
                                                            }
                                                                    
                                              }
                                                      int res = max;
                                                              for(int i = 0;i<256;++i)
                                                              {
                                                                            if(i!=temp)
                                                                            {
                                                                                              if(count[i] %2 == 1)
                                                                                                                    res += count[i]-1;
                                                                                                                                    res += count[i];
                                                                                                                                                
                                                                            }
                                                                                    
                                                              }
                                                                      return res;
                                                                          
    }

};
